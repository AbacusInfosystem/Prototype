                                            <option>Bus</option>
                                            <option>Rail</option>
                                            <option>Car</option>
                                        </select>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Adventure</label><textarea class="form-control input-sm" name="Hotel.adventure" placeholder="Enter Adventure" maxlength="250"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-4">

                                    <div class="form-group">
                                        <label>Place To Visit </label><textarea class="form-control input-sm" name="Hotel.placeToVisit" placeholder="Enter Place To Visit" maxlength="250"></textarea>
                                    </div>
                                </div>

                            </div>


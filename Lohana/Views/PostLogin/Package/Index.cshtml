                                            <option>Mumbai</option>
                                            <option>Banglore</option>
                                            <option>Delhi</option>
                                            <option>Chennai</option>
                                            <option>Jaipur</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Tour Start Date</label><input type="text" id="dtptourStartDate" class="form-control input-sm datepicker" name="Hotel.tourStartDate" placeholder="Enter Tour Start Date">
                                    </div>
                                </div>


                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Tour End Date</label><input type="text" id="dtptourEndDate" class="form-control input-sm datepicker" name="Hotel.tourEndDate" placeholder="Enter Tour End Date">
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Tour Reporting Point</label><input type="text" id="txttourReportingPoint" class="form-control input-sm" name="Hotel.tourReportingPoint" placeholder="Enter Tour Reporting Point">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Tour Dropping Point </label><input type="text" id="txttourDropping" class="form-control input-sm" name="Hotel.tourDropping" placeholder="Enter Tour Dropping ">
                                    </div>
                                </div>


                            </div>




                        </div>

                    </div>


                            <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Inclusions</label><textarea class="form-control input-sm" name="Hotel.inclusions" placeholder="Enter Inclusions" maxlength="250"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Exclusions</label><textarea class="form-control input-sm" name="Hotel.exclusions" placeholder="Enter Exclusions" maxlength="250"></textarea>

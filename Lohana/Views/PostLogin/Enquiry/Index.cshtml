

<div class="content-wrapper">

    @{Html.RenderPartial("_ServerMessage");}

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>
            Enquiry

            <small>Create / Update Page</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Sales</a></li>
            <li class="active">Enquiry</li>
        </ol>
    </section>

    <!-- Main content -->

    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Enquiry</h3>
            </div>
            <div class="box-body">

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label> Customer</label>
                            <input type="text" class="form-control input-sm" name="Customer" placeholder="Enter customer Name">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <br>
                        <div class="btn-group">
                            <button type="button" class="btn btn-success btn-sm">New Customer</button>
                            <button type="button" class="btn btn-warning btn-sm">View Details</button>
                        </div>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>

                <div class="box-header">
                    <h3 class="box-title">Enquiry Type</h3>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <input type="radio" name="EnquiryType">
                            <label> Quick enquiry</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <input type="radio" name="EnquiryType">
                            <label> Custom enquiry</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <input type="radio" name="EnquiryType">
                            <label> Preplanned enquiry</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab_1" data-toggle="tab">Package Details</a></li>
                                <li><a href="#tab_2" data-toggle="tab">Services</a></li>
                                <li><a href="#tab_3" data-toggle="tab">Day Wise</a></li>
                                <li><a href="#tab_4" data-toggle="tab">Additional Info</a></li>

                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_1">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Package Type</label>
                                                <select id="drppackageType" class="form-control input-sm" name="Hotel.packageType">
                                                    <option value="">-Select Package Type-</option>
                                                    <option value="">Individual </option>
                                                    <option value="">Group </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Category</label>
                                                <select id="drpcategory" class="form-control input-sm" name="Hotel.category">
                                                    <option value="">-Select -category-</option>
                                                    <option value="">Domestic </option>
                                                    <option value="">International </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Sub Category</label>
                                                <select id="drpsubCategory" class="form-control input-sm" name="Hotel.subCategory">
                                                    <option value="">-Select -subCategory-</option>
                                                    <option value="">Elders </option>
                                                    <option value="">Family </option>
                                                    <option value="">Couples </option>
                                                    <option value="">Honeymoon </option>
                                                    <option value="">Adventure </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Destination</label><input type="text" id="txtdestination" class="form-control input-sm" name="Hotel.destination" placeholder="Enter Destination">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Budget</label>
                                                <input type="text" id="txtbudget" class="form-control input-sm" name="Hotel.budget" placeholder="Enter Budget">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Duration (days)</label><input type="text" id="txtduration" class="form-control input-sm" name="Hotel.duration" placeholder="Enter Duration (days)">
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Tour Start Date</label><input type="text" id="dtptourStartDate" class="form-control input-sm datepicker" name="Hotel.tourStartDate">
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Best Time to Reach You</label><input type="text" id="tpbestTimeToReachYou" class="form-control input-sm timepicker" name="Hotel.bestTimeToReachYou">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Adults Count</label><input type="text" id="txtAdultCount" class="form-control input-sm" name="Hotel.adultCount" placeholder="Enter adult count">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Children Count</label><input type="text" id="txtChildrenCount" class="form-control input-sm" name="Hotel.ChildrenCount" placeholder="Enter Children count">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_2">

                                    <div class="box-body">
                                        <div class="box-group" id="accordion">
                                            <!-- we are adding the .panel class so bootstrap.js collapse plugin detects it -->
                                            <div class="panel box box-primary">
                                                <div class="box-header with-border">
                                                    <h4 class="box-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                                            Hotel
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div id="collapseOne" class="panel-collapse collapse in">
                                                    <div class="box-body">

                                                        @{Html.RenderPartial("_HotelDetails");}

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel box box-primary">
                                                <div class="box-header with-border">
                                                    <h4 class="box-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                                            Train
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div id="collapseTwo" class="panel-collapse collapse">
                                                    <div class="box-body">
                                                        @{Html.RenderPartial("_TrainDetails");}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel box box-primary">
                                                <div class="box-header with-border">
                                                    <h4 class="box-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                                            Flight
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div id="collapseThree" class="panel-collapse collapse">
                                                    <div class="box-body">
                                                        @{Html.RenderPartial("_FlightDetails");}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel box box-primary">
                                                <div class="box-header with-border">
                                                    <h4 class="box-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
                                                            Bus
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div id="collapseFour" class="panel-collapse collapse">
                                                    <div class="box-body">
                                                        @{Html.RenderPartial("_BusDetails");}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel box box-primary">
                                                <div class="box-header with-border">
                                                    <h4 class="box-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseFive">
                                                            Vehicle
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div id="collapseFive" class="panel-collapse collapse">
                                                    <div class="box-body">

                                                        <div class="row">

                                                            <div class="col-md-3">
                                                                <div class="form-group">
                                                                    <label>Vehicle Type</label>
                                                                    <input type="text" id="txtvehicleType" class="form-control input-sm" name="Hotel.vehicleType" placeholder="Enter Vehicle Type">
                                                                </div>
                                                            </div>

                                                            <div class="col-md-3">
                                                                <div class="form-group">
                                                                    <label>Vehicle Name</label>
                                                                    <input type="text" id="txtvehicleName" class="form-control input-sm" name="Hotel.vehicleName" placeholder="Enter Vehicle Name">
                                                                </div>
                                                            </div>

                                                            <div class="col-md-3">
                                                                <div class="form-group">
                                                                    <label>Vehicle Price</label>
                                                                    <input type="text" id="txtvehiclePrice" class="form-control input-sm" name="Hotel.vehiclePrice" placeholder="Enter Vehicle Price">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-1">
                                                                <div class="form-group">
                                                                    <br>
                                                                    <button type="button" id="btnAddRoom" class="btn btn-default bg-blue">+</button>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row">

                                                            <div class="table-responsive" style="width:100%; margin: 50px 0;">

                                                                <table class="table table-bordered" id="tblVehicleDetails">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Vehicle Type</th>
                                                                            <th>Vehicle Name</th>
                                                                            <th>Vehicle Price</th>
                                                                            <th>Action</th>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Car</td>
                                                                            <td>Honda City</td>
                                                                            <td>9000</td>
                                                                            <td>Edit/Delete</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Bus</td>
                                                                            <td>Volvo</td>
                                                                            <td>20000</td>
                                                                            <td>Edit/Delete</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>van</td>
                                                                            <td>abcd</td>
                                                                            <td>10500</td>
                                                                            <td>Edit/Delete</td>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody></tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab_3">
                                    
                                </div>
                                <div class="tab-pane" id="tab_4">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Additional Information</label><textarea class="form-control input-sm" name="Hotel.additionalInfo" placeholder="Enter Additional Information" maxlength="250"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Status of Enquiry</label><select id="drpstatusOfEnquiry" class="form-control input-sm" name="Hotel.statusOfEnquiry"><option value>-Select -statusOfEnquiry-</option></select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Telesales Name</label><input type="text" id="txttelesalesName" class="form-control input-sm" name="Hotel.telesalesName" placeholder="Enter Telesales Name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Telesales Comment</label><textarea class="form-control input-sm" name="Hotel.telesalesComment" placeholder="Enter Telesales Comment" maxlength="250"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Track Points</label><select id="drptrackPoints" class="form-control input-sm" name="Hotel.trackPoints"><option value>-Select -trackPoints-</option></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-success active" id="btnsave">Save</button>

                    <button type="reset" class="btn btn-warning active" id="btnreset">Reset</button>

                    <button type="button" class="btn btn-danger active" id="btnback">Cancel</button>
                </div>
            </div>
        </div>
    </section>
</div>
